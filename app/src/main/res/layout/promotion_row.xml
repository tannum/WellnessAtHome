<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_promotion"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/no_pic1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/promotion_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="Header"
                android:textSize="@dimen/medium_header_font_size"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/promotion_header_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="header content"
                android:textSize="@dimen/medium_header_font_size"
                android:maxLines="2"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/promotion_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textSize="@dimen/small_content_font_size"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

</LinearLayout>