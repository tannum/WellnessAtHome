<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="1dp"
    app:contentPadding="10dp"
    app:cardElevation="1dp"
    android:layout_marginBottom="1dp">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="4"
        android:rowCount="1">
        <com.mikhaellopez.circularimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_column="0"
            android:id="@+id/officer_pic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/no_pic1"
            android:layout_gravity="center"
            app:civ_border_color="@color/colorWhiteSmoke"
            app:civ_border_width="0dp" />
        <TextView
            android:id="@+id/officer_name"
            android:layout_column="1"
            android:text="Dr.Suttisak\nSangtong"
            android:layout_gravity="center"
            android:maxLines="2"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/txtAvailable_time"
            android:layout_column="2"
            android:text="12.00-18.00"
            android:layout_gravity="center"
            android:maxLines="2"
            android:layout_marginLeft="16dp"/>

        <Button
            android:id="@+id/btnBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="3"
            android:background="@color/colorWhiteBackground"
            android:text="Booking"
            android:textColor="@color/colorInfo"
            android:stateListAnimator="@null"/>
    </GridLayout>



